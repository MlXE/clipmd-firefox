{
  "manifest_version": 3,
  "name": "Clipboard to Markdown",
  "version": "1.1.4",
  "description": "Pick an element, convert its HTML to Markdown or capture it as an image.",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "scripting"
  ],
  "action": {
    "default_title": "Clip to Markdown",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "page": "background.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+M",
        "mac": "MacCtrl+Shift+M"
      },
      "description": "Select element and copy Markdown"
    },
    "clipmd-screenshot": {
      "suggested_key": {
        "default": "Alt+Shift+X",
        "mac": "Command+Shift+X"
      },
      "description": "Select element and copy screenshot"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "clipmd@answerdotai.com",
      "strict_min_version": "109.0"
    }
  }
}
